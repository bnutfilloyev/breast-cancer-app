# Application
APP_NAME=Breast Cancer Detection API
APP_VERSION=1.0.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/breast_cancer
DATABASE_ECHO=false

# Model Configuration
MODEL_WEIGHTS_PATH=
MODEL_DEVICE=cpu
MODEL_CONFIDENCE=0.25
MODEL_IMGSZ=1280
MODEL_IOU=0.4
MODEL_AUGMENT=false

# File Storage
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760
THUMBNAIL_SIZE=256,256

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600
